<!DOCTYPE html>
<html>
<head>
  <title>Kickstarter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <nav>
    <!-- Main pages -->
    <%= link_to "HOME", root_path %> |
    <%= link_to "DISCOVER", categories_path %> |
    <%= link_to "CREATE", new_project_path %><br>
    <!-- Leaderboard -->
    <%= link_to "Project leaderboard", projects_path %> |
    <%= link_to "Pledge leaderboard", pledges_path %><br>
    <!-- User signup -->
    <% if @current_user %>
      <%= link_to "View account", user_path(@current_user)  %> |
    <% else %>
      <%= link_to "New user", new_user_path %> |
    <% end %>
    <!-- User login -->
    <% unless @current_user %>
      <%= link_to "Login", login_path %><br>
    <% else %>
      <%= link_to "Logout", logout_path, method: :delete %><br>
    <% end %>
  </nav>

  <!-- Session id -->
  <% if @current_user %>
    <p><em>@current_user: <%= @current_user.name %></em></p>
  <% else %>
    <p><em>Login above</em></p>
  <% end %>

  <!-- FLASH MESSAGE -->
  <% if flash[:success] %>
    <p style = "color: green"><%= flash[:success] %></p>
  <% end %>
  <% if flash[:error] %>
    <p style = "color: red"><%= flash[:error] %></p>
  <% end %>

  <!-- APP SUMMARY -->
  <p>Live feed: <%= format_app_summary %></p>


  <%= yield %>

</body>
</html>
