<h1>Pledger leaderboard</h1>
<p><em>Kickstarter users who have backed the greatest dollar amount of projects</em></p>
<table>
  <tr>
    <th>Rank</th>
    <th>Pledged</th>
    <th>Projects</th>
    <th>User</th>
    <th>Member since:</th>
  </tr>
  <% @count = 1 %>
  <% @users.reverse_each do |el| %>
    <tr>
      <td><%= @count %></td>
      <td><%= number_to_currency(el.pledges.sum(:amount), precision: 0) %></td>
      <td><%= el.pledges.count %></td>
      <td><%= link_to el.name, user_path(el) %></td>
      <td><%= time_ago_in_words(el.created_at) %> ago</td>
    </tr>
    <% @count += 1 %>
  <% end %>
</table>

<button><%= link_to "Back a new project", custom_find_pledge_path %></button>
